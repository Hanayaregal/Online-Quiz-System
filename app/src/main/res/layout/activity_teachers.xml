<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TeachersActivity"
    android:orientation="vertical"
    android:padding="30dp"
    android:gravity="center">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Welcome to this page"
    android:textSize="30dp"
    android:textStyle="bold"
    android:layout_marginBottom="20dp"/>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/addQuestion"
            android:layout_width="250dp"
            android:layout_height="100dp"
            android:textSize="25sp"
            android:text="Add new question"
            android:layout_margin="10dp"
            android:textColor="@color/white"
            android:backgroundTint="#3F51B5"
            android:textStyle="bold"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/deleteQuestion"
            android:layout_width="250dp"
            android:layout_height="100dp"
            android:textSize="25sp"
            android:text="Delete question"
            android:layout_margin="10dp"
            android:textColor="@color/white"
            android:backgroundTint="#E91E63"
            android:textStyle="bold"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/updateQuestion"
            android:layout_width="250dp"
            android:layout_height="100dp"
            android:textSize="25sp"
            android:text="update question"
            android:layout_margin="10dp"
            android:textColor="@color/white"
            android:backgroundTint="#4CAF50"
            android:textStyle="bold"
            />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/allQuestion"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:textSize="25sp"
        android:text="All question"
        android:layout_margin="10dp"
        android:textColor="@color/white"
        android:backgroundTint="#0ECAE2"
        android:textStyle="bold"
        />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/studInfo"
            android:layout_width="250dp"
            android:layout_height="100dp"
            android:textSize="25sp"
            android:text=" student information"
            android:layout_margin="10dp"
            android:textColor="@color/white"
            android:backgroundTint="#2196F3"
            android:textStyle="bold"
            />




    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/logOut"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:textSize="25sp"
        android:text="Log out"
        android:layout_margin="10dp"
        android:textColor="@color/white"
        android:backgroundTint="#673AB7"
        android:textStyle="bold"
        />
    </LinearLayout>